@model FrontEnd.Models.TransaccionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransaccionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(Model=>Model.TransaccionId)
            <div class="form-group">
                <label asp-for="VentaId" class="control-label"></label>
                @Html.DropDownListFor(model=>model.VentaId, new SelectList(Model.Ventas,"VentaId","VentaId")," --- Seleccionar ---")
                <span asp-validation-for="VentaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarjetaId" class="control-label"></label>
                @Html.DropDownListFor(model=>model.TarjetaId, new SelectList(Model.Tarjetas,"TarjetaId","Nombre")," --- Seleccionar ---")
                <span asp-validation-for="TarjetaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaTransaccion" class="control-label"></label>
                <input asp-for="FechaTransaccion" class="form-control" />
                <span asp-validation-for="FechaTransaccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCorte" class="control-label"></label>
                <input asp-for="FechaCorte" class="form-control" />
                <span asp-validation-for="FechaCorte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InteresesMorosidad" class="control-label"></label>
                <input asp-for="InteresesMorosidad" class="form-control" />
                <span asp-validation-for="InteresesMorosidad" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pagado" /> @Html.DisplayNameFor(model => model.Pagado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
