@model IEnumerable<FrontEnd.Models.CarroVendidoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de autos vendidos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarroVendidoId)
