@model IEnumerable<FrontEnd.Models.SeguroViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
	<div class="row">
		<div class="col-xl-9 col-lg-8 col-md-7">
			<!-- Start Filter Bar -->
			<div class="filter-bar d-flex flex-wrap align-items-center">
				<div class="pagination">
					<a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
					<a href="#" class="active">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
					<a href="#">6</a>
					<a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
				</div>
			</div>
			<!-- End Filter Bar -->
			<!-- Start Product Area -->
			<section class="lattest-product-area pb-40 category-list">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 col-md-6">
							<div class="single-product">
								<!--<img class="img-fluid" src="img/product/carroplaceholder.jpg" alt="">
								Html.DisplayFor(modelItem => item.Imagen)-->
								<div class="product-details">
									<h6>@Html.DisplayFor(modelItem => item.Nombre)</h6>
									<div class="price">
										<h6> @Html.DisplayFor(modelItem => item.Plazo)</h6>
									</div>
									<div class="price">
										<h6> @Html.DisplayFor(modelItem => item.Precio)</h6>
									</div>
									<div class="prd-bottom">
										@Html.ActionLink("Detalles", "Details", new { id = item.SeguroId }) -

										@Html.ActionLink("Editar", "Edit", new { id = item.SeguroId }) -

										@Html.ActionLink("Eliminar", "Delete", new { id = item.SeguroId })
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</section>
			<!-- End Product Area -->
			<!-- Start Filter Bar -->
			<div class="filter-bar d-flex flex-wrap align-items-center">
				<div class="pagination">
					<a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
					<a href="#" class="active">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
					<a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
				</div>
				<div>
				</div>


			</div>
			<p>
				<a asp-action="Create">Agregar seguro</a>
			</p>
		</div>

	</div>
</div>
